@model IEnumerable<SistemaMamoreGranito.Models.Chapa>

@{
    ViewData["Title"] = "Chapas";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-light">@ViewData["Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nova Chapa
            </a>
        </div>
    </div>

    <div class="card bg-dark text-light">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.NomeMaterial)</th>
                            <th>@Html.DisplayNameFor(model => model.TipoMaterial)</th>
                            <th>Dimensões</th>
                            <th>@Html.DisplayNameFor(model => model.Peso)</th>
                            <th>@Html.DisplayNameFor(model => model.Valor)</th>
                            <th>@Html.DisplayNameFor(model => model.BlocoOrigem)</th>
                            <th>@Html.DisplayNameFor(model => model.Disponivel)</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.NomeMaterial)</td>
                                <td>@Html.DisplayFor(modelItem => item.TipoMaterial)</td>
                                <td>
                                    @($"{item.Espessura:F2} x {item.Altura:F2} x {item.Largura:F2} cm")
                                </td>
                                <td>@item.Peso.ToString("F2") kg</td>
                                <td>R$ @item.Valor.ToString("F2")</td>
                                <td>
                                    @if (item.BlocoOrigem != null)
                                    {
                                        @($"{item.BlocoOrigem.NomeMaterial} - {item.BlocoOrigem.TipoMaterial}")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não especificado</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Disponivel)
                                    {
                                        <span class="badge bg-success">Disponível</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Indisponível</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 