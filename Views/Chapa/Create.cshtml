@model SistemaMamoreGranito.Models.Chapa

@{
    ViewData["Title"] = "Nova Chapa";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card bg-dark text-light">
                <div class="card-header">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="NomeMaterial" class="control-label"></label>
                            <input asp-for="NomeMaterial" class="form-control" placeholder="Ex: Mármore Carrara" />
                            <span asp-validation-for="NomeMaterial" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TipoMaterial" class="control-label"></label>
                            <select asp-for="TipoMaterial" class="form-select">
                                <option value="">Selecione o tipo...</option>
                                <option value="Mármore">Mármore</option>
                                <option value="Granito">Granito</option>
                            </select>
                            <span asp-validation-for="TipoMaterial" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Espessura" class="control-label"></label>
                                    <input asp-for="Espessura" class="form-control" placeholder="Ex: 2.0" />
                                    <span asp-validation-for="Espessura" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Altura" class="control-label"></label>
                                    <input asp-for="Altura" class="form-control" placeholder="Ex: 200" />
                                    <span asp-validation-for="Altura" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Largura" class="control-label"></label>
                                    <input asp-for="Largura" class="form-control" placeholder="Ex: 100" />
                                    <span asp-validation-for="Largura" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Peso" class="control-label"></label>
                                    <input asp-for="Peso" class="form-control" placeholder="Ex: 500" />
                                    <span asp-validation-for="Peso" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Valor" class="control-label"></label>
                                    <input asp-for="Valor" class="form-control" placeholder="Ex: 1500.00" />
                                    <span asp-validation-for="Valor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BlocoId" class="control-label">Bloco de Origem (opcional)</label>
                            <select asp-for="BlocoId" class="form-select">
                                <option value="">Chapa Avulsa (sem bloco de origem)</option>
                                @foreach (var bloco in ViewBag.BlocosDisponiveis)
                                {
                                    <option value="@bloco.Id">
                                        @bloco.NomeMaterial - @bloco.TipoMaterial (@bloco.Altura x @bloco.Largura x @bloco.Comprimento cm)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="BlocoId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Observacoes" class="control-label"></label>
                            <textarea asp-for="Observacoes" class="form-control" rows="3" placeholder="Informações adicionais sobre a chapa..."></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="Disponivel" class="form-check-input" />
                                <label asp-for="Disponivel" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 