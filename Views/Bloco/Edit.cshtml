@model SistemaMamoreGranito.Models.Bloco

@{
    ViewData["Title"] = "Editar Bloco";
}

<h1>Editar Bloco</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="NomeMaterial" class="control-label"></label>
                <input asp-for="NomeMaterial" class="form-control" />
                <span asp-validation-for="NomeMaterial" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="TipoMaterial" class="control-label"></label>
                <select asp-for="TipoMaterial" class="form-control">
                    <option value="Mármore">Mármore</option>
                    <option value="Granito">Granito</option>
                </select>
                <span asp-validation-for="TipoMaterial" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Altura" class="control-label"></label>
                <input asp-for="Altura" class="form-control" />
                <span asp-validation-for="Altura" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Largura" class="control-label"></label>
                <input asp-for="Largura" class="form-control" />
                <span asp-validation-for="Largura" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Comprimento" class="control-label"></label>
                <input asp-for="Comprimento" class="form-control" />
                <span asp-validation-for="Comprimento" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Disponivel" class="control-label"></label>
                <input asp-for="Disponivel" class="form-check-input" />
                <span asp-validation-for="Disponivel" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 